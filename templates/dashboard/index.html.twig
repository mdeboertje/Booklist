{% extends 'base.html.twig' %}
{% block title %}Hello DashboardController!{% endblock %}

{% block body %}
    <div class="jumbotron bg-primary">
        <h2 class="text-center text-light">BookHub your favourite booklist!</h2>
    </div>

    <div class="row">
        {% for book in books %}

            <div class="card" style="width: 18rem;">
                <h3 class="card-title card-header bg-primary">{{ book.title }}</h3>
                <div class="card-body">
                    <h5 class="card-text">Author:{{ book.author }}</h5>
                    <h5 class="card-text">Price: ${{ book.price }},-</h5>
                </div>
                <div class="card-footer">
                    <a class="btn btn-primary" href="{{ path('book_show', {'id': book.id}) }}">Read more</a>
                    <a class="btn btn-primary" href="{{ path('review_new_book_id', {'book_id': book.id}) }}">Create comment</a>
                </div>
                <div class="card mt-3 border-top" style="width: 18rem;">

                    <h5 class="card-header bg-primary text-light ">{{ book.reviews[0].name }}</h5>
                    <div class="card-body">
                    <h5 class="card-text bg-light ">{{ book.reviews[0].description }}</h5>
                    </div>
                </div>
            </div>


        {% endfor %}
    </div>


{% endblock %}
