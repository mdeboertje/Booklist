{% extends 'base.html.twig' %}

{% block title %}Review index{% endblock %}

{% block body %}
    <h1>Review index</h1>
    <div class="row">
        <div class="col-xl">
            <table class="table table-striped">
                <thead class="table-dark">
                <tr>
                    <th>Id</th>
                    <th>Description</th>
                    <th>Name</th>
                    <th>Book</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for review in reviews %}
                    <tr>
                        <td>{{ review.id }}</td>
                        <td>{{ review.description }}</td>
                        <td>{{ review.name }}</td>
                        <td>{{ review.bookId.title }}</td>
                        <td>
                            <a class="btn btn-dark" href="{{ path('review_show', {'id': review.id}) }}">show</a>
                            <a class="btn btn-info" href="{{ path('review_edit', {'id': review.id}) }}">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

    </div>
    <div class="row">
        <div class="col-xl">
            <a class="btn btn-info mb-5 mt-3 " href="{{ path('review_new') }}">Create new</a>
        </div>

    </div>

{% endblock %}
